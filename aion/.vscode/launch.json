    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'aion'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=aion",
                    "--package=aion"
                ],
                "filter": {
                    "name": "aion",
                    "kind": "bin"
                }
            },
            
            "env": {
                "RUST_LOG": "info"
            },
           
          
            "args": ["./config.conf" , "--timewarp"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'aion'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=aion",
                    "--package=aion"
                ],
                "filter": {
                    "name": "aion",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}